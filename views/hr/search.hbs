<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grovix Lab HR Management</title>
    <style>
        /* Reset and basic styling */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f7fa;
            color: #333;
        }

        /* Header styling */
        .header {
            background-color: #0078e8;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .header h1 {
            font-size: 28px;
            margin-bottom: 5px;
        }

        .header p {
            font-size: 16px;
        }

        /* Navbar styling */
        .navbar {
            display: flex;
            justify-content: center;
            background-color: #005bb5;
        }

        .navbar a {
            color: #fff;
            padding: 14px 20px;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
        }

        .navbar a:hover {
            background-color: #0078e8;
        }

        /* Main Content Styling */
        .content {
            padding: 40px;
        }

        .content h2 {
            font-size: 24px;
            color: #005bb5;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Flex Container for Search and Add Button */
        .search-and-add-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        /* Search Box Styling */
        .search-box input[type="text"] {
            width: 300px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        /* Add New Employee Button Styling */
        .add-employee-btn {
            background-color: #0078e8;
            color: #fff;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
        }

        .add-employee-btn:hover {
            background-color: #005bb5;
        }

        /* Employee List Table Styling */
        .employee-table {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            border-collapse: collapse;
        }

        .employee-table th,
        .employee-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .employee-table th {
            background-color: #f2f5f7;
            color: #333;
            font-weight: bold;
        }

        .employee-table tr:hover {
            background-color: #f1f9ff;
        }

        /* Action Buttons Styling */
        .action-btns {
            display: flex;
            gap: 8px;
        }

        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            color: #fff;
        }

        .edit-btn {
            background-color: #0078e8;
        }

        .delete-btn {
            background-color: #d9534f;
        }

        .employee-link {
            color: #0078e8;
            text-decoration: none;
            cursor: pointer;
        }

        .employee-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <div class="header">
        <h1>Grovix Lab Official Portal</h1>
        <p>HR Management - Manage Employee Information</p>
    </div>

    <!-- Navbar -->
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/hr">HR</a>
        <a href="/customers">Customers</a>
        <a href="/projects">Projects</a>
        <a href="/invoicing">Invoicing</a>
        <a href="/payments">Payments</a>

    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Employee Management</h2>

        <!-- Flex Container for Search and Add Button -->
        <div class="search-and-add-container">
            <!-- Search Box -->
            <form class="search-box" action="/hr/search" method="post">
                <input type="text" value="{{query}}" name="query" placeholder="Search employee by name or ID">
            </form>
            <!-- Add New Employee Button -->
            <a href="/hr/add-employee" class="add-employee-btn">Add New Employee</a>
        </div>

        <!-- Employee List Table -->
        <table class="employee-table">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Employee Row -->
                {{#each employees}}
                <tr>
                    <td>{{this.employeeId}}</td>
                    <td><a href="/hr/employee/{{this.employeeId}}" class="employee-link">{{this.firstName}}
                            {{this.lastName}}</a></td>
                    <td>{{this.email}}</td>
                    <td class="action-btns">
                        <button class="action-btn edit-btn">
                            <a href="/hr/update-employee/{{this.employeeId}}" style="color: #ffff;">
                                Edit
                            </a>
                        </button>
                        <button class="action-btn delete-btn del-{{this.employeeId}}">Delete</button>
                    </td>
                </tr>
                <script>
                    document.querySelectorAll('.del-{{this.employeeId}}').forEach(button => {
                        button.addEventListener('click', function () {
                            const confirmation = confirm('Are you sure you want to delete this employee?');
                            if (confirmation) {
                                location.href = "/hr/del-employee/{{this.employeeId}}";
                            }
                        });
                    });
                </script>
                {{/each}}
                <!-- Add more employee rows as needed -->
            </tbody>
        </table>
    </div>

</body>

</html>